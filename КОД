namespace LADA
{
    public class Class1
    {
        public static void Chislo(int value)
        {
            if ((value % 10) % 2 == 0)//Условие
            {
                Console.WriteLine("Число четное");
            }
            else
            {
                Console.WriteLine("Число не четное");
            }
            int c1;
            int c2;
            c1 = value % 10;
            c2 = value / 10;
            if (c1 == 4 || c2 == 4 )//Условие
            {
                Console.WriteLine("В число входит цифра 4");
            }
            else
            {
                Console.WriteLine("В числе нет цифры 4");
            }
            if (c1 == 7 || c2 == 7)//Условие
            {
                Console.WriteLine("В число входит цифра 7");
            }
            else
            {
                Console.WriteLine("В числе нет цифры 7");
            }
            return;
        }
    }
}



using LADA;

int Chislo;//Число
Console.WriteLine("Введите натуральное число");//Ввод натурального числа
Chislo = Convert.ToInt32(Console.ReadLine());
Class1.Chislo(Chislo);//Ввод параметров
Console.ReadKey();//Пауза
